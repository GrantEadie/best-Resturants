@{
  Layout = "_Layout";
}

@using Yelp.Models;
@model List<Yelp.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No  have been added yet!</h3>
} 

@foreach (Review review in Model)
{
  <li>@Html.ActionLink($"{review.Description}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Description</li>
}
<hr>

<Button>@Html.ActionLink("Add new review", "Create")</button>