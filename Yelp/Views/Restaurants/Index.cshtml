@{
  Layout = "_Layout";
}

@using Yelp.Models;
@model List<Yelp.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, Not here! </h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Description}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li>
}
<hr>
@using (Html.BeginForm())
{
  @Html.Label("Search restaurants by name")
  @Html.TextBox("Search")
  <input type="submit" value="search" class="btn btn-dark btn-sm"/>
}



<Button>@Html.ActionLink("Add new restaurant", "Create")</button>