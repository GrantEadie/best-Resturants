@{
  Layout = "_Layout";
}

@using Yelp.Models;
@model Yelp.Models.Cuisine;

<h2>Cuisine Details</h2>
<hr />
<h3> @Html.DisplayFor(model => model.Name)</h3>

<ul>
@if (@Model.Restaurants.Count == 0)
{
  <p>no restaurants found</p>
}

@foreach (Restaurant restaurant in @Model.Restaurants)
{
  <li>@Html.ActionLink($"{@restaurant.Description}", "Details","Restaurants", new { id = restaurant.RestaurantId })</li>
}
</ul>
<hr>

<button>@Html.ActionLink("Back to categories", "Index")</button>
<button>@Html.ActionLink("Edit Cuisine", "Edit", new { id = Model.CuisineId })</button>
<button>@Html.ActionLink("Delete Cuisine", "Delete", new { id = Model.CuisineId })</button>
