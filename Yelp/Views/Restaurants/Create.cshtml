@{
  Layout = "_Layout";
}

@model Yelp.Models.Restaurant

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
    <p>Resturant Name</p>
    @Html.TextBoxFor(model => model.Description)

    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId")

    <input type="submit" value="Add new restaurant" class="btn btn-default" />
}
<br>
<Button>@Html.ActionLink("Show all restaurants", "Index")</Button>